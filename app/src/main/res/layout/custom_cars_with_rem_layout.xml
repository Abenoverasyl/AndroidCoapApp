<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiterbl"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            app:srcCompat="@drawable/caricon"
            android:id="@+id/ivCar"
            android:layout_gravity="center"
            android:layout_height="70dp" />

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTmpCarId"
                android:textSize="1sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Дата: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textColor="@color/dark"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-smallcaps" />

                <TextView
                    android:text="Data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFineData"
                    android:textColor="@color/dark"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-smallcaps" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Гос ном: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textColor="@color/dark"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-smallcaps" />

                <TextView
                    android:text="Gos Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvGnFine"
                    android:textColor="@color/dark"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-smallcaps" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="Удалить"
                    android:layout_width="wrap_content"
                    android:id="@+id/btnRemove"
                    android:background="@color/white"
                    android:textColor="@color/colorHint"
                    android:gravity="left"
                    android:layout_height="20dp"
                    android:textSize="12sp" />

                <Button
                    android:text="Редактировать"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:layout_height="20dp"
                    android:id="@+id/btnEdit"
                    android:textColor="@color/colorHint"
                    android:textSize="12sp"
                    android:background="@color/white" />

                <Button
                    android:text="Посмотреть"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_height="20dp"
                    android:id="@+id/btnShowTmpCar"
                    android:textSize="12sp"
                    android:textColor="@color/colorHint"
                    android:background="@color/white" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>