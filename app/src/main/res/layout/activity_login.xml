<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:background="@color/appBarColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.erasyl.coap.LoginActivity">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="146dp"
        android:id="@+id/loginEmail"
        android:textColor="@color/white"
        android:hint="E-mail:"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="abenov.erasyl@gmail.com" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo_blank"
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <Button
        android:text="Зарегистрироваться"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/appBarColor"
        android:textColor="@color/white"
        android:id="@+id/btnToRegister"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <Button
        android:text="Забыли пароль?"
        android:textColor="@color/white"
        android:background="@color/appBarColor"
        android:id="@+id/btnForgotPass"
        android:gravity="right"
        android:textAllCaps="false"
        android:layout_width="150dp"
        android:layout_below="@+id/loginPass"
        android:layout_alignRight="@+id/loginPass"
        android:layout_alignEnd="@+id/loginPass"
        android:layout_height="30dp" />

    <Button
        android:text="Войти"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:textColor="@color/white"
        android:background="@color/btnColor"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnForgotPass"
        android:layout_alignRight="@+id/btnForgotPass"
        android:layout_alignEnd="@+id/btnForgotPass"
        android:layout_alignLeft="@+id/loginPass"
        android:layout_alignStart="@+id/loginPass" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:id="@+id/loginPass"
        android:hint="Пароль:"
        android:layout_below="@+id/loginEmail"
        android:layout_alignLeft="@+id/loginEmail"
        android:layout_alignStart="@+id/loginEmail"
        android:text="ZgA8A" />
</RelativeLayout>
